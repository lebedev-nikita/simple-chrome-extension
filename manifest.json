{
  "$schema": "https://json.schemastore.org/chrome-manifest",

  "manifest_version": 3,
  "name": "My Extension",
  "version": "1.0.0",
  "icons": {
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },

  "action": {},
  "permissions": ["scripting"],
  "host_permissions": ["http://*/*", "https://*/*"],

  "background": {
    "service_worker": "scripts/service-worker.js",
    "type": "module"
  }
}
